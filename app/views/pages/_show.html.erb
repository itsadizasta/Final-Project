<div id="displayReviews">

<table>
  <tr>
    <th id="show">Reviews</th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td id="tdBold">(<%= review.rating %>/5)</td>
  </tr>
  <tr>
  	<td id="show"><%= review.content %></td>
  </tr>
  <tr>
  	<td><%= link_to 'Show', review %></td>
  </tr>
  <tr>
  	<td><hr></td>
  </tr>
<% end %>
</table>
</div>
